    <Grid>
        <Button x:Name="BtnSubmit" Content="Submit" HorizontalAlignment="Left" Height="33" Margin="314,349,0,0" VerticalAlignment="Top" Width="187" Click="BtnSubmit_Click"/>
        <TextBlock x:Name="TxtBlkWord" HorizontalAlignment="Left" Height="64" Margin="180,97,0,0" TextWrapping="Wrap" Text="" TextAlignment="Center" FontFamily="Courier New" FontWeight="UltraBlack"  FontSize="30" VerticalAlignment="Top" Width="424" />
