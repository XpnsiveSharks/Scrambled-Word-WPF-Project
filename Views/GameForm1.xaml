        <TextBox x:Name="TxtBxAnswer" HorizontalAlignment="Left" Height="37" Margin="301,301,0,0" TextWrapping="Wrap" Text="" TextAlignment="Center" FontSize="16" VerticalAlignment="Top" Width="212"/>
        <TextBlock x:Name="TxtBlkScore" HorizontalAlignment="Left" Height="47" Margin="10,10,0,0" TextWrapping="Wrap" Text="" TextAlignment="Center" FontFamily="Comic Sans MS" FontWeight="UltraBlack" FontSize="40" VerticalAlignment="Top" Width="85"/>
        <TextBlock x:Name="TxtBlkDifficulty" HorizontalAlignment="Left" Height="56" Margin="478,25,0,0" TextWrapping="Wrap" Text="" TextAlignment="Center" FontFamily="Comic Sans MS" FontWeight="UltraBlack" FontSize="20" VerticalAlignment="Top" Width="312"/>
        <TextBlock x:Name="TxtBlkCorrectGuess" HorizontalAlignment="Left" Height="25" Margin="10,382,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="65"/>

    </Grid>
</Window>
